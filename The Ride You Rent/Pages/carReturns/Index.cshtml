            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarReturn[0].Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarReturn[0].ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarReturn[0].RentalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarReturn[0].Car)
            </th>
